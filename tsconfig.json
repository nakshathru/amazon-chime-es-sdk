{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution":"Node",
    "target": "es2018",
    "lib": ["es2017", "dom"],
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "./guides/docs.ts"
  ]
}
